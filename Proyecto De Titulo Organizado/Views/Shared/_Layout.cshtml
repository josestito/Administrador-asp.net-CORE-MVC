<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_De_Titulo_Organizado</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <h1 id="reloj"></h1>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/empleado/administrarempleado">Empleados</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Espacio/AdministrarEspacios">Espacios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Horario/AdministrarHorario">Horarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/registro/AdministrarRegistro">Registros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/TipoEmpleado/AdministrarTipoEmpleado">Privilegios de empleados</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Login" asp-action="Logout" method="post" >
                            <button type="submit" class="btn btn-danger" asp-controller="Login" asp-action="Logout">cerrar sesion</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Proyecto_De_Titulo_Organizado - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>